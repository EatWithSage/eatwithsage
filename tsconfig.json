{
  "include": [
    "client/src/**/*",
    "shared/**/*",
    "server/**/*"
  ],
  "exclude": [
    "node_modules",
    "build",
    "dist",
    "**/*.test.ts"
  ],
  "compilerOptions": {
    "incremental": true,
    "tsBuildInfoFile": "./node_modules/typescript/tsbuildinfo",
    "noEmit": true,
    "module": "ESNext",
    "strict": false,
    "noImplicitAny": false,
    "lib": [
      "esnext",
      "dom",
      "dom.iterable"
    ],
    "jsx": "react",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noImplicitReturns": false,
    "noImplicitThis": false,
    "allowImportingTsExtensions": true,
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "types": [
      "node",
      "vite/client",
      "react",
      "react-dom"
    ],
    "paths": {
      "@/*": [
        "client/src/*"
      ],
      "@shared/*": [
        "./shared/*"
      ]
    }
  }
}